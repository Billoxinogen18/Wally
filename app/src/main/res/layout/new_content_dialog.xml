<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:maxHeight="@dimen/post_dialog_max_height"
    android:minWidth="@dimen/content_dialog_min_width"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/middle_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:minHeight="250dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_panel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_title"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/btn_visibility_status"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/content_title_hint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/Note_et"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_visibility_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_public_visibility_24dp"
                    android:padding="8dp"
                    android:text="Public"
                    android:textAllCaps="false" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_note"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@null"
                android:fontFamily="serif"
                android:hint="@string/note_hint"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:scrollbars="none"
                android:textSize="16sp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_btn_map_75dp"
                android:visibility="visible" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignBottom="@id/middle_panel"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:targetApi="lollipop">

        <ImageButton
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_insert_photo_black_24dp" />

        <ImageButton
            android:id="@+id/btn_pallette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_select_colors_24dp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:minWidth="50dp" />

        <Button
            android:id="@+id/action_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/discard" />

        <Button
            android:id="@+id/action_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_create"
            android:theme="@style/AppTheme.PositiveButton" />
    </LinearLayout>
</RelativeLayout>