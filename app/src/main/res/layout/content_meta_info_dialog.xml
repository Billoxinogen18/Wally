<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/pickers_background"
    android:padding="8dp"
    tools:context=".activities.CameraARActivity">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/more_options_container"
        android:layout_alignLeft="@+id/more_options_container"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:text="@string/content_meta_info_dialog_title"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/more_options_container"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switch_anonymous_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="@string/anonymous_author_checkbox"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/switch_map_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"
            android:text="@string/preview_visibility_checkbox"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>