<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/color_picker_popup_width"
    android:layout_height="@dimen/color_picker_popup_width"
    android:background="@android:drawable/spinner_dropdown_background"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_white"
                app:civ_border_color="#000"
                app:civ_border_width="1dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_red" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_orange" />
        </TableRow>

        <TableRow android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_grey" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_green" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_yellow" />
        </TableRow>

        <TableRow android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_deep_purple" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_teal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/picker_color_item_size"
                android:layout_height="@dimen/picker_color_item_size"
                android:layout_margin="@dimen/picker_color_item_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@color/note_color_blue" />
        </TableRow>

    </TableLayout>
</android.support.v7.widget.CardView>